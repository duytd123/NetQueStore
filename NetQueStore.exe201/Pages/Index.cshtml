    <script>
        $(document).ready(function () {
            $("#subscribe-form").on("submit", function (e) {
                e.preventDefault();
                var form = $(this);
                var messageDiv = $("#form-message");
                messageDiv.hide().removeClass("alert alert-success alert-danger alert-info");

                $.ajax({
                    url: "/Index",
                    method: "POST",
                    data: form.serialize(),
                    success: function (response) {
                        var newMessage = $(response).find("#form-message").html();
                        messageDiv.html(newMessage || "Đăng ký thành công! Cảm ơn bạn đã quan tâm.")
                            .addClass("alert alert-success animate__animated animate__fadeIn")
                            .show();
                        form[0].reset();
                    },
                    error: function (xhr) {
                        var errorMessage = "Đã xảy ra lỗi, vui lòng thử lại!";
                        if (xhr.status === 400) {
                            errorMessage = "Email không hợp lệ hoặc đã được đăng ký!";
                        }
                        messageDiv.html(errorMessage)
                            .addClass("alert alert-danger animate__animated animate__fadeIn")
                            .show();
                    }
                });
            });

            $('.combo-carousel').owlCarousel({
                loop: true,
                margin: 20,
                nav: false,
                autoplay: true,
                autoplayTimeout: 3000,
                autoplayHoverPause: true,
                responsive: {
                    0: { items: 1 },
                    600: { items: 2 },
                    1000: { items: 3 }
                }
            });
        });

        const promoEndTime = new Date("2025-07-21T23:59:59");

        function updatePromoTimer() {
            const now = new Date();
            let timeLeft = Math.floor((promoEndTime - now) / 1000);

            if (timeLeft < 0) timeLeft = 0;

            let days = Math.floor(timeLeft / 86400);
            let hours = Math.floor((timeLeft % 86400) / 3600);
            let minutes = Math.floor((timeLeft % 3600) / 60);
            let seconds = Math.floor(timeLeft % 60);

            document.getElementById("promo-days").innerHTML = days + "<span>Ngày</span>";
            document.getElementById("promo-hours").innerHTML = (hours < 10 ? "0" : "") + hours + "<span>Giờ</span>";
            document.getElementById("promo-minutes").innerHTML = (minutes < 10 ? "0" : "") + minutes + "<span>Phút</span>";
            document.getElementById("promo-seconds").innerHTML = (seconds < 10 ? "0" : "") + seconds + "<span>Giây</span>";
        }

        document.addEventListener("DOMContentLoaded", function () {
            updatePromoTimer();
            setInterval(updatePromoTimer, 1000);
        });
    </script>
}