        justify-content: center;
        padding: 10px;
        border-bottom: 1px solid #eee;
        background-color: #fafafa;
    }

    .combo-carousel .product-image {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .combo-carousel .card-body {
        padding: 10px;
        flex-grow: 1;
    }

    .combo-carousel .card-title {
        font-size: 1.1rem;
        margin-bottom: 0.2rem;
        height: 2.4em;
