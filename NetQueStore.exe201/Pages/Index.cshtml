<section class="combo-highlight-section py-5 bg-white">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="display-6 fw-bold text-primary">🔥 Combo Đặc Biệt Dành Riêng Cho Bạn</h2>
            <p class="lead text-muted">Tận hưởng hương vị Tây Bắc đậm đà với các combo độc đáo, thơm ngon khó cưỡng!</p>
        </div>
        <div class="combo-carousel owl-carousel">
            @if (Model.SpecialFoods.Any())
            {
                @foreach (var item in Model.SpecialFoods)
                {
                    var image = item.FoodImages.FirstOrDefault(i => i.IsPrimary)?.Filename ?? "default.png";
                    var isOutOfStock = item.StockQuantity <= 0;
                    <div class="card combo-card border-0 shadow-sm">
                        <div class="position-relative overflow-hidden rounded-top">
                            <span class="badge bg-danger position-absolute top-0 start-0 m-2">Combo</span>
                            @if (item.SalePrice.HasValue && item.SalePrice < item.Price)
                            {
                                <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2">Giảm giá</span>
                            }
                            <a href="/Detail?id=@item.Id">
                                <img src="/images/foods/@image" class="w-100 combo-img" alt="@item.Name" onerror="this.src='/images/foods/default.png'" />
                            </a>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-dark text-truncate">@item.Name</h5>
                            <p class="text-muted small mb-2">@item.Unit</p>
                            @if (item.SalePrice.HasValue && item.SalePrice < item.Price)
                            {
                                <p class="mb-1 text-decoration-line-through text-danger">@item.Price.ToString("N0") ₫</p>
                                <p class="fw-bold text-success">@item.SalePrice.Value.ToString("N0") ₫</p>
                            }
                            else
                            {
                                <p class="fw-bold text-success">@item.Price.ToString("N0") ₫</p>
                            }

                            <button type="button" class="btn btn-sm btn-outline-primary w-100 mt-2 @(!isOutOfStock ? "" : "disabled")"
                                    onclick="addToCart(this, @item.Id)"
                            @(isOutOfStock ? "title='Hết hàng'" : "")>
                                <i class="bi bi-cart-plus me-1"></i> Thêm vào giỏ
                            </button>

                            @if (isOutOfStock)
                            {
                                <small class="text-danger d-block mt-1">Hết hàng</small>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center text-muted">Không có combo nào để hiển thị.</p>
            }
        </div>
    </div>
</section>

