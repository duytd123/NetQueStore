        margin: 0.2rem 0;
    }

    .combo-carousel .text-decoration-line-through {
        font-size: 0.9rem;
        color: #dc3545;
    }

    .combo-carousel .btn-add-cart {
        width: 100%;
        font-size: 0.9rem;
        padding: 6px;
        background-color: #ffc107;
        border: none;
        border-radius: 4px;
    }

        .combo-carousel .btn-add-cart:hover {
