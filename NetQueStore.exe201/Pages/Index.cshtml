
@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["NoContainer"] = true;
}
<style>
    .book-item img {
        width: 100%;
        height: 260px;
        object-fit: contain;
        background: radial-gradient(white 50%, lightblue 100%)
    }

    .book-item {
        transition: all 0.3s ease;
    }

        .book-item:hover {
            transform: scale(1.05);
        }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <a>hello world</a>


    <div class="py-5">
        <div class="container">
            <h1 class="pb-5 text-center display-5"><strong> List Food</strong></h1>
            <div class="row">
                @foreach (var item in Model.Foods)

                {
                    var image = item.FoodImages.FirstOrDefault(i => i.IsPrimary)?.Filename ?? ".png";
                    <div class="col-lg-3 col-sm-6 my-2">
                        <div class="card shadow text-center h-100 book-item">
                            <img src="/images/foods/@image" class="card-img-top p-3" alt="..." />
                            <div class="card-body">
                                <h4>@item.Name</h4>
                                <p>Food: @item.Name, Category: @item.Category.Name, Quantity: @item.StockQuantity</p>
                                <h4>@item.Price.ToString("N0") ₫</h4>
                                <button type="button" class="btn btn-warning btn-sm my-2" onclick="addToCart(this, @item.Id)">
                                    Add to Cart <i class="bi bi-cart4"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>
