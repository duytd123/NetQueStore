                margin: 15,               // Khoảng cách giữa các item
                nav: true,                // Có nút điều hướng trái/phải
                dots: false,              // Ẩn dots
                       autoplay: true,
            autoplayTimeout: 2000,         // Không chờ giữa các lần chuyển
            autoplaySpeed: 3000,        // Tốc độ chuyển động (giảm nếu muốn chạy nhanh hơn)
            smartSpeed: 3000,           // Tốc độ chuyển thông minh
            animateOut: 'linear',
                autoplayHoverPause: true,// Dừng khi hover vào
                responsive: {
                    0: { items: 1 },
