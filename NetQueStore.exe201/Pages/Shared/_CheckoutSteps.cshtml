@{
    var path = Context.Request.Path.ToString().ToLower();
    int step = 1;

    if (path.Contains("/checkout"))
    {
        step = 2;
    }
    else if (path.Contains("/ordercomlete"))
    {
        step = 3;
    }
}

<nav class="mt-4 mb-3 text-center" aria-label="breadcrumb">
    <div class="d-inline">
        <span class="@(step == 1 ? "fw-bold text-dark" : "text-dark")">
            <a class="text-decoration-none text-dark" href="/Cart">Giỏ Hàng</a>
        </span>

        <span class="mx-2">»</span>

        <span class="@(step == 2 ? "fw-bold text-dark" : "text-dark")">
            <a class="text-decoration-none text-dark" href="/Checkout">Chi tiết thanh toán</a>
        </span>

        <span class="mx-2">»</span>

        <span class="@(step == 3 ? "fw-bold text-dark" : "text-muted")">
            Hoàn thành đơn đặt
        </span>
    </div>
</nav>
