@page
@model NetQueStore.exe201.Pages.Login
@{
    ViewData["Title"] = "Đăng nhập - NetQue Shop";
    Layout = null;
}

<div class="login-container">
    <div class="login-box">
        <div class="shop-header">
            <h1>NetQue Shop</h1>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Username" class="control-label">Tên đăng nhập</label>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="control-label">Mật khẩu</label>
                <input asp-for="Input.Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>



            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
            </div>

       
        </form>
    </div>
</div>

    <style>
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f9f9f9; /* nền sáng nhẹ */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 1rem;
        }

        .login-box {
            background: #ffffff;
            padding: 2rem 2rem 2.5rem;
            border-radius: 10px;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

        .shop-header {
            text-align: center;
            margin-bottom: 1.8rem;
        }

        .shop-header h1 {
            font-weight: 600;
            font-size: 2rem;
            color: #333333;
            margin-bottom: 0.4rem;
        }

        /* Form groups */
        .form-group {
            margin-bottom: 1.4rem;
        }

        label.control-label {
            display: block;
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: #555555;
            font-size: 1rem;
        }

        input.form-control {
            width: 100%;
            padding: 0.5rem 0.9rem;
            font-size: 1rem;
            border: 1.5px solid #ccc;
            border-radius: 6px;
            background-color: #fafafa;
            transition: border-color 0.3s ease;
        }

        input.form-control:focus {
            border-color: #999999;
            outline: none;
            background-color: #fff;
        }

        /* Validation message */
        .text-danger {
            font-size: 0.85rem;
            margin-top: 0.3rem;
            color: #d9534f; /* đỏ nhẹ */
        }

        /* Button */
        .btn-primary {
            background-color: #b0bec5; /* màu xanh xám nhạt */
            border: none;
            padding: 0.65rem;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 6px;
            cursor: pointer;
            width: 100%;
            color: #444444;
            transition: background-color 0.3s ease;
            box-shadow: none;
        }

        .btn-primary:hover,
        .btn-primary:focus {
            background-color: #90a4ae; /* đậm hơn một chút khi hover */
            outline: none;
            color: #222222;
        }

        /* Fonts mượt */
        body, input, button {
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }



    </style>
