@page
@model NetQueStore.exe201.Pages.AboutmeModel
@{
}


<!-- Contact Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">Liên hệ</h1>

                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger">@Model.ErrorMessage</div>
                        }
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success">@TempData["Success"]</div>
                        }

                        <p class="mb-4">
                            Website liên hệ hiện đang hoạt động. Bạn có thể dễ dàng đặt mua các món đặc sản Tây Bắc thơm ngon, chuẩn vị ngay tại đây.
                            Hãy khám phá và trải nghiệm ẩm thực độc đáo vùng núi phía Bắc với những món ăn truyền thống và mới lạ.
                            <a href="https://www.facebook.com/profile.php?id=61576889700715">Khám phá ngay</a>.
                        </p>
                    </div>

                </div>
                <div class="col-lg-12">
                    <div class="h-100 rounded">
                        <iframe class="rounded w-100"
                                style="height: 400px;" src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d3724.783135760251!2d105.51782421148384!3d21.001328480560492!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1stro%20kieu%20quyen!5e0!3m2!1sen!2s!4v1749294683668!5m2!1sen!2s"
                                loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                <div class="col-lg-7">
                    <form method="post">
                        <input asp-for="NewMessage.Firstname" class="form-control mb-2" placeholder="Tên" />
                        <span asp-validation-for="NewMessage.Firstname" class="text-danger"></span>

                        <input asp-for="NewMessage.Lastname" class="form-control mb-2" placeholder="Họ" />
                        <span asp-validation-for="NewMessage.Lastname" class="text-danger"></span>

                        <input asp-for="NewMessage.Email" type="email" class="form-control mb-2" placeholder="Email" />
                        <span asp-validation-for="NewMessage.Email" class="text-danger"></span>

                        <input asp-for="NewMessage.Phone" class="form-control mb-2" placeholder="Số điện thoại" />
                        <span asp-validation-for="NewMessage.Phone" class="text-danger"></span>

                        <input asp-for="NewMessage.Subject" class="form-control mb-2" placeholder="Tiêu đề" />
                        <span asp-validation-for="NewMessage.Subject" class="text-danger"></span>

                        <textarea asp-for="NewMessage.Message1" class="form-control mb-2" placeholder="Nội dung tin nhắn"></textarea>
                        <span asp-validation-for="NewMessage.Message1" class="text-danger"></span>

                        <button type="submit" class="btn btn-primary">Gửi</button>
                    </form>


                    @section Scripts {
                        <partial name="_ValidationScriptsPartial" />
                    }

                </div>
                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Địa chỉ</h4>
                            <p class="mb-2">Thạch Thất - Hà Nội</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Email của chúng tôi</h4>
                            <p class="mb-2">hieubuivan646@gmail.com</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Số điện thoại liên hệ</h4>
                            <p class="mb-2">0865033812</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
